# Base de Datos PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/clinica_mia

# JWT Secret (generar uno seguro con: openssl rand -base64 32)
JWT_SECRET=your_super_secure_secret_key_here_change_this

# Puerto del servidor
PORT=4000

# Entorno (development, production, test)
NODE_ENV=development

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost:3000

# OpenAI API (Opcional - Para AI Medical Assistant)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Email Service (Opcional - Para notificaciones)
RESEND_API_KEY=your_resend_api_key_here
EMAIL_FROM=noreply@clinicamiacolombia.com

# ePayco (Opcional - Para pagos)
EPAYCO_PUBLIC_KEY=your_epayco_public_key
EPAYCO_PRIVATE_KEY=your_epayco_private_key
EPAYCO_TEST_MODE=true

# Configuraci√≥n adicional
LOG_LEVEL=info
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
