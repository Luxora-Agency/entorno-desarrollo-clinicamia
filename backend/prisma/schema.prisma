// =====================
// MIA PASS - PLANES, SUSCRIPCIONES Y COMISIONES
// =====================

model MiaPassPlan {
  id                Int      @id @default(autoincrement())
  nombre            String   @db.VarChar(255)
  descripcion       String?  @db.Text
  costo             Decimal  @db.Decimal(12, 2)
  duracionMeses     Int      @default(12) @map("duracion_meses")
  color             String?  @db.VarChar(50)
  icono             String?  @db.VarChar(50)
  beneficios        Json?    // Array of strings
  descuentos        Json?    // Map of discounts
  itemsConsumibles  Json?    @map("items_consumibles") // Array of objects
  destacado         Boolean  @default(false)
  activo            Boolean  @default(true)
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  suscripciones     MiaPassSuscripcion[]
  cupones           MiaPassCupon[] @relation("PlanCoupons")

  @@map("mia_planes")
}

model MiaPassSuscripcion {
  id                Int                      @id @default(autoincrement())
  planId            Int                      @map("plan_id")
  pacienteId        String                   @map("paciente_id")
  vendedorId        String?                  @map("vendedor_id") @db.Uuid
  vendedorCodigo    String?                  @map("vendedor_codigo") // Cédula del titular del código
  canal             String?                  @default("Presencial") // WhatsApp, Web, Redes, etc.

  fechaInicio       DateTime                 @default(now()) @map("fecha_inicio")
  fechaFin          DateTime                 @map("fecha_fin")
  estado            EstadoSuscripcionMiaPass @default(ACTIVA)
  metodoPago        String?                  @db.VarChar(50) @map("metodo_pago")
  precioPagado      Decimal                  @db.Decimal(12, 2) @map("precio_pagado")

  // Detalle financiero para comisiones (Política v1.1)
  baseComisional    Decimal                  @default(199900) @db.Decimal(12, 2) @map("base_comisional")
  valorIva          Decimal                  @default(37981) @db.Decimal(12, 2) @map("valor_iva")

  motivoAnulacion   String?                  @map("motivo_anulacion")
  fechaAnulacion    DateTime?                @map("fecha_anulacion")

  createdAt         DateTime                 @default(now()) @map("created_at")
  updatedAt         DateTime                 @updatedAt @map("updated_at")

  plan              MiaPassPlan              @relation(fields: [planId], references: [id])
  paciente          Paciente                 @relation(fields: [pacienteId], references: [id])
  vendedor          Usuario?                 @relation("VendedorMiaPass", fields: [vendedorId], references: [id])
  comisiones        MiaPassComision[]
  formularioOrigen  FormularioMiaPass?       // Formulario de origen si fue convertido

  @@map("mia_suscripciones")
}

model MiaPassCupon {
  id                Int      @id @default(autoincrement())
  codigo            String   @unique @db.VarChar(50)
  descripcion       String?  @db.Text
  tipoDescuento     String   @db.VarChar(20) @map("tipo_descuento") // porcentaje, valor
  valorDescuento    Decimal  @db.Decimal(12, 2) @map("valor_descuento")
  fechaInicio       DateTime @map("fecha_inicio")
  fechaFin          DateTime @map("fecha_fin")
  usos              Int      @default(0)
  usosMaximos       Int      @default(100) @map("usos_maximos")
  activo            Boolean  @default(true)
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  miaPlanes         MiaPassPlan[] @relation("PlanCoupons")

  @@map("mia_cupones")
}

model MiaPassComision {
  id                String   @id @default(uuid())
  suscripcionId     Int      @map("suscripcion_id")
  vendedorId        String   @map("vendedor_id") @db.Uuid
  rolBeneficiario   String   @map("rol_beneficiario") // VENDEDOR, REFERIDOR_N1, REFERIDOR_N2, DIRECTOR, DIRECTOR_TOTAL, CM, GERENTE

  baseCalculo       Decimal  @db.Decimal(12, 2) @map("base_calculo")
  porcentaje        Float
  valor             Decimal  @db.Decimal(12, 2)

  estado            String   @default("PENDIENTE") // PENDIENTE, LIQUIDADO, PAGADO, REVERTIDO
  corteId           String?  @map("corte_id")

  // Campos para reverso de comisiones (Política v1.1)
  motivoReverso     String?  @map("motivo_reverso")
  fechaReverso      DateTime? @map("fecha_reverso")

  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  suscripcion       MiaPassSuscripcion @relation(fields: [suscripcionId], references: [id])
  beneficiario      Usuario @relation(fields: [vendedorId], references: [id])
  corte             MiaPassCorte? @relation(fields: [corteId], references: [id])

  @@map("mia_comisiones")
}

model MiaPassCorte {
  id                String   @id @default(uuid())
  fechaCorte        DateTime @default(now()) @map("fecha_corte")
  periodo           String   // Ej: "2026-01"
  totalComisiones   Decimal  @db.Decimal(12, 2) @map("total_comisiones")
  estado            String   @default("ABIERTO") // ABIERTO, CERRADO
  elaboradoPor      String   @db.Uuid
  
  comisiones        MiaPassComision[]

  @@map("mia_cortes")
}
