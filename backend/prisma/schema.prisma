  equipoPAMEC                  EquipoPAMEC[]
  medicionesIndicador          MedicionIndicador[]
  reportesEventosAdversos      EventoAdverso[]
  integrantesComite            IntegranteComite[]
  compromisosComite            CompromisoComite[]
