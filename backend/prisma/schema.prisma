  protocolosPPAprobados               ProtocoloProcesosPrioritarios[] @relation("ProtocoloPPAprobador")
  documentosProtocoloPPCargados       DocumentoProtocoloPP[]          @relation("DocumentoPPCargador")
  eventosAdversosPPReportados         EventoAdversoPP[]               @relation("EventoAdversoReportador")
  documentosEventoAdversoPPCargados   DocumentoEventoAdversoPP[]      @relation("DocumentoEventoAdversoPPCargador")
  gpcCreadas                          GuiaPracticaClinica[]           @relation("GPCCreador")
  gpcResponsable                      GuiaPracticaClinica[]           @relation("GPCResponsable")
  documentosGPCCargados               DocumentoGPC[]                  @relation("DocumentoGPCCargador")
  evaluacionesAdherenciaGPCRealizadas EvaluacionAdherenciaGPC[]       @relation("EvaluadorAdherenciaGPC")
  comitesCreados                      Comite[]                        @relation("ComiteCreador")
  comitesComoPresidente               Comite[]                        @relation("ComitePresidente")
  comitesComoSecretario               Comite[]                        @relation("ComiteSecretario")
  miembrosComite                      MiembroComite[]                 @relation("MiembroComiteUsuario")
  actasComiteElaboradas               ActaComite[]                    @relation("ActaElaborador")
  asistenciasActasComite              AsistenteActaComite[]           @relation("AsistenteActa")
  documentosActaComiteCargados        DocumentoActaComite[]           @relation("DocumentoActaCargador")
  encuestasSatisfaccionRegistradas    EncuestaSatisfaccion[]          @relation("EncuestaRegistrador")
