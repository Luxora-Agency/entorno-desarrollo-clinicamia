// Solicitudes de Historia Clínica
model SolicitudHistoriaClinica {
  id          String                       @id @default(uuid())
  pacienteId  String                       @map("paciente_id")
  tipo        TipoSolicitudHC              @default(COMPLETA)
  periodo     String?
  motivo      String?
  estado      EstadoSolicitudHC            @default(PENDIENTE)
  notas       String?                      @db.Text
  archivoUrl  String?                      @map("archivo_url")
  procesadoPor String?                     @map("procesado_por")
  fechaProcesado DateTime?                 @map("fecha_procesado")
  createdAt   DateTime                     @default(now()) @map("created_at")
  updatedAt   DateTime                     @updatedAt @map("updated_at")

  paciente    Paciente                     @relation(fields: [pacienteId], references: [id])

  @@map("solicitudes_historia_clinica")
}

enum TipoSolicitudHC {
  COMPLETA
  PARCIAL
}

enum EstadoSolicitudHC {
  PENDIENTE
  EN_PROCESO
  LISTA
  ENTREGADA
  RECHAZADA
}

model Cita {
  id                    String               @id @default(uuid())
  pacienteId            String               @map("paciente_id")
  doctorId              String?              @map("doctor_id") @db.Uuid
  admisionId            String?              @map("admision_id")
  especialidadId        String?              @map("especialidad_id") @db.Uuid
  examenProcedimientoId String?              @map("examen_procedimiento_id") @db.Uuid
  tipoCita              String?              @default("Especialidad") @map("tipo_cita") @db.VarChar(50)
  fecha                 DateTime?            @db.Date
  hora                  DateTime?            @db.Time(6)
  duracionMinutos       Int?                 @default(30) @map("duracion_minutos")
  costo                 Decimal              @default(0) @db.Decimal(10, 2)
  motivo                String
  estado                EstadoCita           @default(PorAgendar)
  prioridad             String?              @default("Media") @db.VarChar(50)
  notas                 String?
  esEmergencia          Boolean              @default(false) @map("es_emergencia")
  motivoEmergencia      String?              @map("motivo_emergencia")
  origenPaciente        String?              @map("origen_paciente") @db.VarChar(50) // 'consulta_prioritaria', 'urgencia', 'remitido', 'control', 'espontaneo'
  institucionRemite     String?              @map("institucion_remite") @db.VarChar(255) // Si es remitido, de dónde viene
  estadoPago            String?              @map("estado_pago") @db.VarChar(50) // 'pagada', 'pendiente', 'exenta', 'cortesia'
  // Campos para tracking de recordatorios enviados
  recordatorio7Dias     Boolean              @default(false) @map("recordatorio_7_dias")
  recordatorio4Dias     Boolean              @default(false) @map("recordatorio_4_dias")
  recordatorio3Horas    Boolean              @default(false) @map("recordatorio_3_horas")
  createdAt             DateTime             @default(now()) @map("created_at")
  updatedAt             DateTime             @updatedAt @map("updated_at")
  atencionesUrgencias   AtencionUrgencia[]
  admision              Admision?            @relation(fields: [admisionId], references: [id])
  doctor                Usuario?             @relation("CitasDoctor", fields: [doctorId], references: [id], onDelete: Cascade)
  especialidad          Especialidad?        @relation(fields: [especialidadId], references: [id])
  examenProcedimiento   ExamenProcedimiento? @relation(fields: [examenProcedimientoId], references: [id])
  paciente              Paciente             @relation(fields: [pacienteId], references: [id], onDelete: Cascade)
  evolucionesClinicas   EvolucionClinica[]
  itemsFactura          FacturaItem[]
  ordenesMedicamentos   OrdenMedicamento[]
  ordenesMedicas        OrdenMedica[]
  pqrs                  PQRS[]               @relation("PQRSCita")
  prescripciones        Prescripcion[]
  procedimientos        Procedimiento[]
  signosVitales         SignoVital[]
  ticketsSoporte        TicketSoporte[]
  paymentSession        PaymentSession?
  incapacidades         IncapacidadMedica[]
  certificados          CertificadoMedico[]
  aiConversations       AiConversationLog[]  @relation("AiConversationCita")
  encuestasSatisfaccion EncuestaSatisfaccion[] @relation("EncuestaCita")
  reservaHorario        ReservaHorario?

  // Note: Unique constraint removed because it would include cancelled appointments.
  // Race condition prevention is handled at the service layer with transaction-based validation.
  @@index([doctorId, fecha, hora])
  @@map("citas")
}

