  pqrsfResponsable                    PQRSF[]                         @relation("PQRSFResponsable")
  documentosPQRSFCargados             DocumentoPQRSF[]                @relation("DocumentoPQRSFCargador")
  indicadoresPPCreados                IndicadorProcesosPrioritarios[] @relation("IndicadorPPCreador")
  indicadoresPPResponsable            IndicadorProcesosPrioritarios[] @relation("IndicadorPPResponsable")
  medicionesIndicadorPPRegistradas    MedicionIndicadorPP[]           @relation("MedicionIndicadorPPRegistrador")
  alertasPPAtendidas                  AlertaProcesosPrioritarios[]    @relation("AlertaPPAtendedor")

  // Historia Clínica - Calidad 2.0 Relations
  documentosHCElaborados           DocumentoHC[]         @relation("DocHCElaborador")
  documentosHCRevisados            DocumentoHC[]         @relation("DocHCRevisor")
  documentosHCAprobados            DocumentoHC[]         @relation("DocHCAprobador")
  versionesDocHCCreadas            VersionDocHC[]        @relation("VersionDocHCCreador")
  distribucionDocHC                DistribucionDocHC[]   @relation("DistribucionDocHC")
  certificacionesHCResponsable     CertificacionHC[]     @relation("CertificacionHCResponsable")
  auditoriasHCRealizadas           AuditoriaHC[]         @relation("AuditoriaHCAuditor")
  hallazgosHCResponsable           HallazgoHC[]          @relation("HallazgoHCResponsable")
  indicadoresHCResponsable         IndicadorCalidadHC[]  @relation("IndicadorHCResponsable")
