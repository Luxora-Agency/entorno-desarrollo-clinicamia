  inventariosMedicamentosRegistrados    InventarioMedicamento[]         @relation("InventarioRegistrador")
  inventariosMedicamentosModificados    InventarioMedicamento[]         @relation("InventarioModificador")
  registrosTemperaturaHumedadCreados    RegistroTemperaturaHumedad[]    @relation("TemperaturaHumedadRegistrador")
  formatosMedicamentosCreados           FormatoMedicamento[]            @relation("FormatoMedicamentoCreador")
  instanciasFormatoMedicamentoLlenadas  InstanciaFormatoMedicamento[]   @relation("InstanciaFormatoLlenador")
  instanciasFormatoMedicamentoRevisadas InstanciaFormatoMedicamento[]   @relation("InstanciaFormatoRevisor")
  documentosReporteCargados             DocumentoReporte[]              @relation("DocumentoReporteCargador")
  reportesFarmacovigilanciaVerificados  ReporteFarmacovigilancia[]      @relation("FarmacovigilanciaVerificador")
  reportesTecnovigilanciaVerificados    ReporteTecnovigilancia[]        @relation("TecnovigilanciaVerificador")

