// Libro Mayor (vista denormalizada para consultas rápidas)
model LibroMayor {
  id                String   @id @default(uuid())

  // Período
  anio              Int
  mes               Int

  // Cuenta
  cuentaCodigo      String   @map("cuenta_codigo")
  cuentaNombre      String   @map("cuenta_nombre")
  cuentaTipo        String   @map("cuenta_tipo") // Activo | Pasivo | Patrimonio | Ingreso | Gasto
  cuentaNaturaleza  String   @map("cuenta_naturaleza") // Débito | Crédito

